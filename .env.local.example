# IMPORTANT: This is a template file for development
# Copy this to .env.local and fill in your actual values
# DO NOT commit .env.local to git!

# Database URL for Prisma
# Replace with your PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# Nhanh.vn API Configuration (v3.0)
# API Documentation: https://apidocs.nhanh.vn/v3
NHANH_API_URL=https://pos.open.nhanh.vn
NHANH_APP_ID=your_app_id
NHANH_BUSINESS_ID=your_business_id
NHANH_ACCESS_TOKEN=your_nhanh_access_token
# Depot ID (Warehouse ID) to sync inventory from (leave empty to use total inventory from all depots)
# To find depot IDs, check Nhanh.vn settings or use the depot list API
NHANH_STORE_ID=your_store_id

# Shopify API Configuration
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_API_VERSION=2024-01
